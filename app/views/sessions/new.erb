<div class = "center_box">
<h1>Login</h1>

<h3><%= flash[:notice] %></h3>
<%= form_tag login_path, method: :post, class: "center_form" do %>
  <%= label_tag "Username" %>
  <br>
  <%= text_field_tag :username %>
  <br>
  <%= label_tag "Password" %>
  <br>
  <%= password_field_tag :password %>
  <br>
  <br>
  <%= submit_tag "Login" %>
<% end %>
<a href = '/users/new'><button class = "new_user">New User</button></a>
</div>
<br>
